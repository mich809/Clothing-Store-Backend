
type Query {
	getUserAccount(email: String!): UserAccount
	getUserAddress(id: Int!): UserAddress
	getUserPayment(id: Int!): UserPayment
	getProduct(id : Int!) : product
	getAllProducts :[product]
	getAllProductsPaged(page: Int , size: Int) : [product]
	getAllProductsByAscendingPrice(page: Int , size: Int): [product]
	getAllProductsByDescendingPrice(page: Int , size: Int): [product]
	getAllProductsByNewest(page: Int , size: Int): [product]
	getOrder(userID:Int, orderID: Int): order
	getAllOrders(userID:Int): [order]
}

type Mutation{
	createUserAccount(email: String! , password : String!): String
	deleteUserAccount(email: String!): String
	addUserAddress(email: String! , userAddress : UserAddressInput! ): String	
	deleteUserAddress(id: Int!): String
	addUserPayment(email: String! , userPayment : UserPaymentInput! ): String
	deleteUserPayment(id: Int!): String	
	createProduct(product: ProductInput!): product
	deleteProduct(id: Int!) : String
	createOrder(userID: Int!, orderID : Int! , productID : Int!  ): order
	deleteOrder(orderID : Int!): String
}

type UserAccount{
	id : ID
	email : String
	userAddress : UserAddress
	userPayment: UserPayment
	
}

type UserPayment{
	id : ID
	firstName: String
	lastName: String
	paymentType : String
	provider : String
	expireDate: String
	cardNumber: String
	
}

type UserAddress{
	firstName: String
	lastName : String
	addressLineOne: String
	addressLineTwo: String
	city: String
	postalCode: String
	country: String
	telephone: String
	
}

type product{
	id : Int
	name: String
	description: String
	image : String
	price: Float
	quantity : Int
	createdDate : String
	
}

type order{
	id : Int
	totalCost: Int
	products: [product]
}

input UserAddressInput{
	firstName: String
	lastName : String
	addressLineOne: String
	addressLineTwo: String
	city: String
	postalCode: String
	country: String
	telephone: String	
	
}

input UserPaymentInput{
	firstName: String
	lastName : String
	cardNumber: String
	expireDate: String
	
	
	
}

input ProductInput{
	name: String
	description : String
	image : String
	price : Int
	quantity : Int
	
	
	
}



